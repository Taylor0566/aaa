{
  "bsonType": "object",
  "required": ["username", "passwordHash"],
  "permission": {
    "read": false,
    "create": false,
    "update": false,
    "delete": false
  },
  "properties": {
    "_id": {
      "description": "ID，系统自动生成"
    },
    "username": {
      "bsonType": "string",
      "description": "用户名",
      "trim": "both"
    },
    "passwordHash": {
      "bsonType": "string",
      "description": "密码哈希"
    },
    "salt": {
      "bsonType": "string",
      "description": "密码盐"
    },
    "status": {
      "bsonType": "string",
      "description": "账号状态",
      "defaultValue": "active"
    },
    "create_time": {
      "bsonType": "timestamp",
      "description": "创建时间",
      "forceDefaultValue": {
        "$env": "now"
      }
    }
  }
}